{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],

    "incremental": true,

    "moduleResolution": "NodeNext",
    "baseUrl": "./src",
    "paths": {},

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true,
    
    "isolatedModules": true,
    
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": [
    "src/**/*.ts"
  ]
}
